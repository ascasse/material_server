  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File with args",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "args": ["c:/background", "material.db3"],
      "console": "integratedTerminal"
    }
  ],
  "env": { "PYTHONPATH": "${workspaceRoot}" }
}
